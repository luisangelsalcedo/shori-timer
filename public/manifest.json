{
  "manifest_version": 3,
  "name": "Timer for Shori",
  "version": "1.2.2",
  "description": "Muestra un temporizador al hacer clic en el icono",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "128": "icon.png"
    },
    "default_title": "Timer Shori"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["sounds/pre-alarm.mp3", "sounds/alarm.mp3"],
    "matches": ["<all_urls>"]
  }]
}
